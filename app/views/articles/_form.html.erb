<%= render 'layouts/errors', obj: @article %>

<%= form_with(model: @article, class: "is-primary", local: true) do |f| %>
<div class="field">
  <%= f.label :title, class: "label" %>
  <div class="control">
    <%= f.text_field :title , class: "input" %>
  </div>
</div>
<div class="field">
  <%= f.label :description, class: "label" %>
  <div class="control">
    <%= f.text_area :description , class: "textarea" %>
  </div>
</div>
<div class="field">
  <%= f.label :category, class: "label" %>
  <div class="control is-expanded">
    <%= f.collection_select(:category_ids, Category.all, :id, :name,
    { prompt: "Make your selection from the list below." }, { multiple: true, class: "select is-fullwidth" } ) %>
  </div>
</div>
<div class="field">
  <%= f.submit class: "button" %>
</div>
</div>
<% end %>

<%= link_to  "['Cancel and return to articles listing']", articles_path %>